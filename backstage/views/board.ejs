<script>
	$("#saveBtn").click(function () {
    console.log();
    if(!$("#typeahead").val()){
        alert("标题不能为空");
	}else if(!$("#textarea2").val()){
        alert("内容不能为空");
	}else{
        $.ajax({
            url: '/saveBoard',
            type: 'POST',
            dataType: 'text',
            data: {title: $("#typeahead").val(),content:$("#textarea2").val()},
        })
            .done(function(data) {
                if(data=='1'){
                    alert("添加成功！");
                    $("#typeahead").val("");
                    $("#textarea2").val("");
				}else{
                    alert("添加失败,请刷新后重试！")
				}
            });

    }
}	)
</script>