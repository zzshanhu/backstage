<script>
    $("#saveBtn").click(function () {
        console.log();
        if(!$("#equipName").val()){
            alert("设备种类名称不能为空");
        }else if(!$("#equipAllNo").val()){
            alert("设备种类编号不能为空");
        }else if(!$("#equipImage").val()){
            alert("设备图片地址不能为空");
        }else{
            $.ajax({
                url: '/saveClassUpdate',
                type: 'POST',
                dataType: 'text',
                data: $("form").serialize()
            })
                .done(function(data) {
                    if(data=='1'){
                        alert("添加成功！");
                        $("form")[0].reset();
                    }else{
                        alert("添加失败,请刷新后重试！")
                    }
                });

        }
    }	)

</script>
