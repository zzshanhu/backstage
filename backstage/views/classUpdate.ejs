<%include components/header.ejs%>
<%include components/menu.ejs%>
        <!-- start: Content -->
        <div id="content" class="span10">


            <ul class="breadcrumb">
                <li>
                    <i class="icon-home"></i>
                    <a href="borrow.html">Home</a>
                    <i class="icon-angle-right"></i>
                </li>
                <li>
                    <i class="icon-edit"></i>
                    <a href="#">设备种类更新</a>
                </li>
            </ul>

            <!--查询设备Start-->
            <!--<a href="viewEquipmentAll">查看总览</a>-->
            <div class="row-fluid sortable">
                <div class="box span12">
                    <div class="box-header">
                        <h2><i class="halflings-icon white align-justify"></i><span class="break"></span>设备种类列表</h2>
                        <div class="box-icon">
                            <a href="#" class="btn-setting"><i class="halflings-icon white wrench"></i></a>
                            <a href="#" class="btn-minimize"><i class="halflings-icon white chevron-up"></i></a>
                            <a href="#" class="btn-close"><i class="halflings-icon white remove"></i></a>
                        </div>
                    </div>
                    <div class="box-content" id="borrowTable">
                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th>设备种类</th>
                                <th>种类名称</th>
                                <th>借出数量</th>
                                <th>剩余数量</th>
                                <th>总数量</th>
                                <th>操作人</th>
                            </tr>
                            </thead>
                            <% if(equipAll.length){%>
                            <tbody>
                            <% equipAll.forEach(function (equipAll){%>
                            <tr>
                                <td class="center"><%=equipAll.equipAllNo%></td>
                                <td class="center"><%=equipAll.equipName%></td>
                                <td class="center"><%=equipAll.equipLoan%></td>
                                <td class="center"><%=equipAll.equipOverplus%></td>
                                <td class="center"><%=equipAll.equipNumber%></td>
                                <td class="center"><%=equipAll.addMan%></td>
                            </tr>
                            <% }) %>
                            </tbody>
                            <% } %>

                        </table>
                    </div>
                </div><!--/span-->
            </div>
            <!--查询设备end-->

            <div class="row-fluid sortable">
                <div class="box span12">
                    <div class="box-header" data-original-title>
                        <h2><i class="halflings-icon white edit"></i><span class="break"></span>设备种类更新</h2>
                        <div class="box-icon">
                            <a href="#" class="btn-setting"><i class="halflings-icon white wrench"></i></a>
                            <a href="#" class="btn-minimize"><i class="halflings-icon white chevron-up"></i></a>
                            <a href="#" class="btn-close"><i class="halflings-icon white remove"></i></a>
                        </div>
                    </div>
                    <div class="box-content">
                        <form class="form-horizontal">
                            <fieldset>
                                <div class="control-group">
                                    <label class="control-label" for="equipName">设备种类</label>
                                    <div class="controls">
                                        <input name="equipName" type="text" class="span6 typeahead" id="equipName"  data-provide="typeahead" data-items="4">
                                        <p class="help-block">输入设备种类中文名称</p>
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label" for="equipAllNo">设备大类编号</label>
                                    <div class="controls">
                                        <input name="equipAllNo" type="text" class="span6 typeahead" id="equipAllNo"  data-provide="typeahead" data-items="4">
                                        <p class="help-block">输入设备种类编号</p>
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label" for="addTime">添加时间</label>
                                    <div class="controls">
                                        <input name="addTime" type="text" class="input-xlarge datepicker" id="addTime" value="<%=user.date%>">
                                    </div>
                                </div>

                                <div class="control-group">
                                    <label class="control-label" for="equipImage">图片添加</label>
                                    <div class="controls">
                                        <input name="equipImage" class="input-file uniform_on" id="equipImage" type="text">
                                        <p class="help-block">输入设备图片地址</p>
                                    </div>

                                </div>
                                <div class="form-actions">
                                    <button type="button" class="btn btn-primary" id="saveBtn">保存</button>
                                    <button type="button" class="btn">取消</button>
                                </div>
                            </fieldset>
                        </form>

                    </div>
                </div><!--/span-->

            </div><!--/row-->
        </div><!--/.fluid-container-->

        <!-- end: Content -->
    </div><!--/#content.span10-->
</div><!--/fluid-row-->

<div class="modal hide fade" id="myModal">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">×</button>
        <h3>Settings</h3>
    </div>
    <div class="modal-body">
        <p>Here settings can be configured...</p>
    </div>
    <div class="modal-footer">
        <a href="#" class="btn" data-dismiss="modal">Close</a>
        <a href="#" class="btn btn-primary">Save changes</a>
    </div>
</div>

