<script>
	window.onload=function () {
		var cookieArr=document.cookie.split('; ')
		for(var i=0;i<cookieArr.length;i++){
            var mykey=cookieArr[i].split('=')[0];
            var value=cookieArr[i].split('=')[1];
            if(mykey=='username'){
                console.log('username')
                $('#username').val(value);
            }
            if(mykey=='password'){
                console.log('password')
                $('#password').val(value);
            }
		}
    }
    function submitInfo() {
        console.log(111);
        console.log($("form").serialize());
        $.ajax({
            url: 'login',
            type: 'POST',
            dataType: 'text',
            data:$("form").serialize()
        })
            .done(function(data) {
                console.log(data);
                if(data=='1'){
                    window.location.href='borrow.html';
                }else if(data=='-1') {
                    alert("对不起，您没有权限！")
                }else if(data=='2') {
                    alert("账号错误，请检查后重新输入！")
                }else if(data=='3') {
                    alert("密码错误，请检查后重新输入！")
                }else{
                    alert("未知错误，请刷新后输入！")
                }
            });
    }
</script>
