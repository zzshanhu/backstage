<script>
    $("#saveBtn").click(function () {
        console.log();
        if(!$("#equipID").val()){
            alert("设备编号不能为空");
        }else if(!$("#damReason").val()){
            alert("损坏原因不能为空");
        }else{
            $.ajax({
                url: '/saveService',
                type: 'POST',
                dataType: 'text',
                data: $("form").serialize()
            })
                .done(function(data) {
                    if(data=='1'){
                        alert("添加成功！");
                        $("form")[0].reset();
                    }else{
                        alert("添加失败,请刷新后重试！")
                    }
                });

        }
    }	)


</script>